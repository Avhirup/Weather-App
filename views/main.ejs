<%- include("partials/header"); -%>

    <div class="container">
        <div class="box">
            <div class="main-box">
                <h2 id="cityName">
                    <%= cityName %>
                </h2>
                <p>Latitude: <%= lat %> | Longitude: <%= lon %>
                </p>
                <img src=<%=img %> alt="">
                <h1 id="temp">
                    <%= temp %> Â°C
                </h1>
                <h3 id="description">
                    <%= description %>
                </h3>
                <p id="humidity">
                    Humidity: <%= humidity %>
                </p>
                <p>Max temp: <%= maxTemp %> | Min temp: <%= minTemp %>
                </p>
            </div>

            <form action="/" method="POST" class="box-form">
                <div class="box-input">
                    <i class="fa-solid fa-location-dot"></i>
                    <!-- <i class="fa-solid fa-thumbtack"></i> -->
                    <input type="text" name="location" id="location-inp" placeholder="Enter your location">
                </div>
                <button class="btn">Enter</button>
            </form>

            <p id="date"></p>
        </div>
    </div>


    <%- include("partials/footer"); -%>